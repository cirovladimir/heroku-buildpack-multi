#!/usr/bin/env bash

set -e

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

unset GIT_DIR

cat $1/.buildpacks | while read BUILDPACK basepath || [ -n "$BUILDPACK" ]; do
  dir=$(mktemp -t buildpackXXXXX)
  rm -rf $dir

  url=${BUILDPACK%#*}
  # echo "url: $url"
  branch=${BUILDPACK#*#}
  # echo "basepath: $basepath"


  if [ "$branch" == "$url" ]; then
    branch=""
  fi

  # echo "branch: $branch"

  if [ "$url" != "" ]; then
    echo "=====> Downloading Buildpack: $url"

    if [[ "$url" =~ \.tgz$ ]]; then
      mkdir -p "$dir"
      curl -s "$url" | tar xvz -C "$dir" >/dev/null 2>&1
    else
      git clone $url $dir >/dev/null 2>&1
    fi
    cd $dir

    if [ "$branch" != "" ]; then
      git checkout $branch >/dev/null 2>&1
    fi

    # we'll get errors later if these are needed and don't exist
    chmod -f +x $dir/bin/{detect,compile,release} || true

    if [ "$basepath" != "" ]; then
      path=$basepath
    else
      path=$1
    fi

    echo "=====> Current path is: $1, Basepath for buildpack is: $path"

    framework=$($dir/bin/detect $path)

    echo "=====> Framework: $framework"

    if [ $? == 0 ]; then
      echo "=====> Detected Framework: $framework"
      $dir/bin/compile $path $2 $3

      if [ $? != 0 ]; then
        exit 1
      fi

      if [ -x $dir/bin/release ]; then
        $dir/bin/release $path > $path/last_pack_release.out
      fi
    fi
  fi
done

if [ -e $path/last_pack_release.out ]; then
  echo "Using release configuration from last framework ($framework)."
fi
